task main ()
{
    string in, out;
    bool run = true;
    int line = 0;
    SendResponseBool(MAILBOX1, true);
    while (run)
    {
        NumOut(0, 40, BluetoothStatus(CONN_BT0));
        NumOut(0, 50, NO_ERR);
        if (ReceiveRemoteString(MAILBOX1, true, in) == NO_ERR)
        {
            TextOut (0, line * 8, in, true);
            SendResponseBool(MAILBOX1, true);
            Wait(1000);
            line = line + 1;
        }
    }
}
